{
  "name": "envisionxperts.com",
  "version": "1.0.0",
  "scripts": {
    "build": "npm run build:css && npm run copy:js",
    "build:css": "postcss src/css/main.css -o public/assets/css/style.css",
    "copy:js": "mkdir -p public/assets/js && cp src/js/main.js public/assets/js/",
    "watch:css": "postcss src/css/main.css -o public/assets/css/style.css --watch",
    "dev": "npm run build && npm run watch:css"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.14",
    "postcss": "^8.4.23",
    "postcss-cli": "^10.1.0",
    "postcss-nesting": "^11.2.2",
    "tailwindcss": "^3.3.2",
    "gsap": "^3.12.0"
  }
}
